<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Root container of the application, using BorderPane layout -->
<BorderPane fx:controller="tourrouteplanner.controller.MainController" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="700.0" minWidth="1000.0" prefHeight="700.0" prefWidth="1200.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <!-- TOP area: Contains MenuBar and application Header -->
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <!-- Main Menu Bar -->
            <MenuBar styleClass="menu-bar">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleSaveRoute" text="Save Route..." />
                    <MenuItem mnemonicParsing="false" onAction="#handleLoadRoute" text="Load Route..." />
                    <SeparatorMenuItem mnemonicParsing="false" />
                    <MenuItem mnemonicParsing="false" onAction="#onExit" text="Exit" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <!-- Application Header -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="app-header">
               <padding>
                  <Insets bottom="15.0" left="25.0" right="25.0" top="15.0" />
               </padding>
               <children>
                  <Label styleClass="header-title" text="TOUR ROUTE PLANNER" />
                  <!-- Spacer to push dark mode toggle to the right -->
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="darkModeToggle" onAction="#toggleDarkMode" styleClass="dark-mode-toggle">
                     <tooltip>
                        <Tooltip text="Switch to dark mode" />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <!-- CENTER area: Contains SplitPane dividing interface into 2 main parts -->
   <center>
      <SplitPane BorderPane.alignment="CENTER" dividerPositions="0.35" prefHeight="160.0" prefWidth="200.0" styleClass="main-split-pane">
        <items>
          <!-- Left Panel: Contains input controls and information display -->
          <VBox prefHeight="200.0" prefWidth="350.0" spacing="15.0" styleClass="side-panel">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <!-- Place search area -->
                  <Label styleClass="section-header" text="Search Places:" />
                  <HBox alignment="CENTER_LEFT" spacing="12.0">
                     <children>
                        <StackPane HBox.hgrow="ALWAYS">
                           <children>
                              <VBox spacing="0">
                                 <children>
                                    <TextField fx:id="searchBox" onAction="#handleSearch" promptText="Enter place name..." styleClass="search-field">
                                       <tooltip>
                                          <Tooltip text="Enter at least 2 characters to search for places. Suggestions will appear automatically." />
                                       </tooltip>
                                    </TextField>
                                    <ListView fx:id="suggestionsListView" prefHeight="150.0" visible="false" managed="false" styleClass="suggestions-list" />
                                 </children>
                              </VBox>
                              <!-- Loading animation container -->
                              <HBox fx:id="loadingContainer" alignment="CENTER" spacing="8.0" visible="false" managed="false" styleClass="loading-container">
                                 <children>
                                    <javafx.scene.control.ProgressIndicator fx:id="loadingSpinner" prefHeight="20.0" prefWidth="20.0" styleClass="loading-spinner" />
                                    <Label text="Searching..." styleClass="loading-text" />
                                 </children>
                                 <StackPane.margin>
                                    <Insets top="50.0" />
                                 </StackPane.margin>
                              </HBox>
                           </children>
                        </StackPane>
                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" styleClass="search-button" text="Search">
                           <tooltip>
                              <Tooltip text="Search for places" />
                           </tooltip>
                           <graphic>
                              <ImageView fitHeight="18.0" fitWidth="18.0">
                                 <image>
                                    <Image url="@/tourrouteplanner/icons/search.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </HBox>
                  <!-- Search results display area -->
                  <Label styleClass="section-header" text="Search Results:" />
                  <StackPane fx:id="searchResultsContainer" prefHeight="200.0" VBox.vgrow="SOMETIMES">
                     <children>
                        <ListView fx:id="placeListView" styleClass="places-list" />
                        <Label fx:id="searchPlaceholder" text="Search results will appear here" styleClass="placeholder-text" visible="true" mouseTransparent="true" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" top="8.0" />
                     </VBox.margin>
                  </StackPane>

                  <!-- Selected places in route display area -->
                  <Label styleClass="section-header" text="Selected Places in Route:" />
                  <StackPane fx:id="routeTableContainer" prefHeight="250.0" VBox.vgrow="SOMETIMES">
                     <children>
                        <HBox spacing="5.0">
                           <children>
                              <TableView fx:id="routeTableView" styleClass="route-table" HBox.hgrow="ALWAYS">
                                <columns>
                                  <TableColumn fx:id="routePlaceNameColumn" prefWidth="150.0" text="Place Name" />
                                  <TableColumn fx:id="routePlaceAddressColumn" prefWidth="200.0" text="Address" />
                                </columns>
                              </TableView>
                              <!-- Move up/down buttons -->
                              <VBox alignment="CENTER" spacing="6.0">
                                 <padding>
                                    <Insets left="8.0" right="5.0" />
                                 </padding>
                                 <children>
                                    <Button fx:id="moveUpButton" mnemonicParsing="false" onAction="#handleMoveUp" styleClass="move-button" disable="true">
                                       <graphic>
                                          <ImageView fitHeight="14.0" fitWidth="14.0">
                                             <image>
                                                <Image url="@icons/arrow-up.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                       <tooltip>
                                          <Tooltip text="Move up" />
                                       </tooltip>
                                    </Button>
                                    <Button fx:id="moveDownButton" mnemonicParsing="false" onAction="#handleMoveDown" styleClass="move-button" disable="true">
                                       <graphic>
                                          <ImageView fitHeight="14.0" fitWidth="14.0">
                                             <image>
                                                <Image url="@icons/arrow-down.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                       <tooltip>
                                          <Tooltip text="Move down" />
                                       </tooltip>
                                    </Button>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <Label fx:id="routePlaceholder" text="No places selected yet" styleClass="placeholder-text" visible="true" mouseTransparent="true" />
                     </children>
                     <VBox.margin>
                        <Insets top="8.0" />
                     </VBox.margin>
                  </StackPane>
                  <!-- Action buttons for selected places list -->
                  <HBox alignment="CENTER" spacing="12.0">
                     <children>
                        <Button fx:id="removeSelectedButton" mnemonicParsing="false" onAction="#handleRemoveSelected" styleClass="remove-button" text="Remove" disable="true">
                           <padding>
                              <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
                           </padding>
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0">
                                 <image>
                                    <Image url="@/tourrouteplanner/icons/delete.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <tooltip>
                              <Tooltip text="Remove selected place from route" />
                           </tooltip>
                        </Button>
                        <Button fx:id="clearAllButton" mnemonicParsing="false" onAction="#handleClearAllPlaces" styleClass="clear-button" text="Clear All" disable="true">
                           <padding>
                              <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
                           </padding>
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0">
                                 <image>
                                    <Image url="@/tourrouteplanner/icons/delete.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <tooltip>
                              <Tooltip text="Clear all places from route" />
                           </tooltip>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </HBox>
                  <!-- Find optimal route button -->
                  <VBox alignment="CENTER" spacing="12.0">
                     <children>
                        <Button fx:id="findRouteButton" mnemonicParsing="false" onAction="#handleFindRoute" styleClass="find-route-button" text="ðŸš€ Find Optimal Route" disable="true">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                           <padding>
                              <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
                           </padding>
                           <tooltip>
                              <Tooltip text="Find optimal route for selected places" />
                           </tooltip>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </VBox>
                  <!-- Find optimal route button has been moved -->
                  <!-- Route information display area has been removed -->
               </children>
            </VBox>
            <!-- Right Panel: Contains map and new controls -->
            <BorderPane fx:id="mapAndControlsPane" styleClass="glass-panel">
               <center>
                  <!-- StackPane to contain JxBrowser displaying map -->
                  <StackPane fx:id="mapPane" BorderPane.alignment="CENTER" styleClass="map-container" />
               </center>
               <bottom>
                  <VBox alignment="TOP_CENTER" spacing="15.0" BorderPane.alignment="CENTER" styleClass="glass-panel">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <!-- Dynamic route information display area (initially hidden) -->
                        <ScrollPane fx:id="dynamicRouteInfoScrollPane" fitToWidth="true" styleClass="route-info-container" VBox.vgrow="NEVER">
                           <content>
                              <TextArea fx:id="dynamicRouteInfoTextArea" editable="false" wrapText="true" styleClass="route-info" />
                           </content>
                           <VBox.margin>
                              <Insets top="8.0" />
                           </VBox.margin>
                        </ScrollPane>
                     </children>
                  </VBox>
               </bottom>
            </BorderPane>
        </items>
      </SplitPane>
   </center>
   <!-- BOTTOM area: Contains status bar -->
   <bottom>
      <HBox alignment="CENTER_LEFT" styleClass="status-bar" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
         </padding>
         <children>
            <Label fx:id="statusLabel" styleClass="status-text" text="Ready" />
         </children>
      </HBox>
   </bottom>
</BorderPane>